<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@css/splash.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scene.dev.splash_controller">
   <children>
      <StackPane fx:id="stack_pane" prefHeight="720.0" prefWidth="1280.0">
         <children>
            <Label alignment="TOP_CENTER" prefHeight="81.0" prefWidth="517.0" text="CSGO Event Manager" textAlignment="CENTER">
               <font>
                  <Font name="Segoe UI Semibold" size="50.0" />
               </font>
               <StackPane.margin>
                  <Insets bottom="400.0" />
               </StackPane.margin>
            </Label>
            <Label fx:id="version_tag" alignment="TOP_CENTER" prefHeight="81.0" prefWidth="496.0" text="Version x.x.x.x" textAlignment="CENTER">
               <font>
                  <Font name="Segoe UI Semibold" size="26.0" />
               </font>
               <StackPane.margin>
                  <Insets bottom="250.0" />
               </StackPane.margin>
            </Label>
            <Label fx:id="statusText" text="Checking online version...">
               <font>
                  <Font name="Segoe UI Semibold" size="22.0" />
               </font>
            </Label>
            <ImageView fx:id="load_gif" fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/load.gif" />
               </image>
               <StackPane.margin>
                  <Insets top="100.0" />
               </StackPane.margin>
            </ImageView>
            <HBox alignment="BOTTOM_CENTER" spacing="50.0" StackPane.alignment="BOTTOM_CENTER">
               <children>
                  <HBox alignment="CENTER" prefHeight="103.0" prefWidth="184.0">
                     <children>
                        <ImageView fx:id="discord" cache="true" cacheHint="QUALITY" fitHeight="82.0" fitWidth="79.0" onMouseClicked="#Discord" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/discord.png" />
                           </image>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ImageView>
                        <Label text="Discord" textAlignment="CENTER">
                           <font>
                              <Font name="Segoe UI Semibold" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="103.0" prefWidth="184.0">
                     <children>
                        <ImageView fx:id="twitter" cache="true" cacheHint="QUALITY" fitHeight="82.0" fitWidth="79.0" onMouseClicked="#Twitter" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/twitter.png" />
                           </image>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ImageView>
                        <Label text="Twitter" textAlignment="CENTER">
                           <font>
                              <Font name="Segoe UI Semibold" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                        </Label>
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="103.0" prefWidth="184.0">
                     <children>
                        <ImageView fx:id="youtube" cache="true" cacheHint="QUALITY" fitHeight="82.0" fitWidth="79.0" onMouseClicked="#Youtube" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@img/yt.png" />
                           </image>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ImageView>
                        <Label text="Youtube" textAlignment="CENTER">
                           <font>
                              <Font name="Segoe UI Semibold" size="18.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <StackPane.margin>
                  <Insets top="500.0" />
               </StackPane.margin>
            </HBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
